@model List<Product>

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td> 
                <td>@product.Stock</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = product.ProductID })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = product.ProductID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-success">Create New Product</a>
