@model ST10339829_CLDV6212_POE_FINAL.Models.Product

<h2>Delete Product</h2>

<p>Are you sure you want to delete this product?</p>

<div>
    <strong>Product ID:</strong> @Model.ProductID <br />
    <strong>Product Name:</strong> @Model.Name <br />
    <strong>Price:</strong> @Model.Price.ToString("C") <br />
    <strong>Stock:</strong> @Model.Stock
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
